@model Triangle

<html>
<head>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        table {
            width: 50%;
            border: 1px solid green;
            margin: auto;
        }
        td {
            text-align: center;
        }
    </style>
</head>
<body>
<h2>Triangles</h2>
@if (Model == null)
{
    <form method="post" action="SaveTriangle">
        <p>name: <input name="name"/></p>
        <p>A: <input name="A"/></p>
        <p>B: <input name="B"/></p>
        <p>C: <input name="C"/></p>
        <input type="submit" value="Send"/>
    </form>
}
@if (Model != null)
{
    <form method="post" action="UpdateTriangle">
        <p>id <input name="id" value=@Model.id> </p>
        <p>name: <input name="name" value=@Model.name /></p>
        <p>A: <input name="A" value=@Model.a /></p>
        <p>B: <input name="B" value=@Model.b /></p>
        <p>C: <input name="C" value=@Model.c /></p>
        <input type="submit" value="Send"/>
    </form>
}
</body>
</html>
